<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FAFD" >

    <RelativeLayout
        android:id="@+id/disclaimer_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_h"
        android:background="#1A7CB1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="DISCLAIMER"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/title_s" />

        <ImageView
            android:id="@+id/disclaimer_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/actionbar_back_p_tbr"
            android:paddingLeft="@dimen/actionbar_back_p_l"
            android:paddingRight="@dimen/actionbar_back_p_tbr"
            android:paddingTop="@dimen/actionbar_back_p_tbr"
            android:src="@drawable/back_icon" />
    </RelativeLayout>

    <Button
        android:id="@+id/disclaimer_read_bt"
        android:layout_width="@dimen/disclaimer_button_w"
        android:layout_height="@dimen/disclaimer_button_h"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/disclaimer_button_m_b"
        android:layout_marginTop="@dimen/disclaimer_button_m_t"
        android:background="@drawable/background_start"
        android:text="READ &amp; ACCEPT"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/disclaimer_button_s" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/disclaimer_read_bt"
        android:layout_below="@id/disclaimer_actionbar"
        android:padding="@dimen/disclaimer_p" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/disclaimer_infor_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|top"
                android:text="Disclaimer"
                android:textColor="#000000"
                android:textSize="@dimen/disclaimer_infor_s" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>