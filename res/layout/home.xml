<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4FAFD"
        android:orientation="vertical"
        android:weightSum="100" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="#077DAD" >
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="46"
            android:paddingTop="@dimen/home_icon_p_t"
            android:src="@drawable/app_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/home_name_m_t"
            android:layout_weight="16"
            android:gravity="center_horizontal|top"
            android:text="@string/app_name"
            android:textColor="#077DAD"
            android:textSize="@dimen/home_name_s"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="12"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Results List"
            android:textColor="#077DAD"
            android:textSize="@dimen/home_result_s" />

        <Button
            android:id="@+id/home_start_bt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/home_m_b_start"
            android:layout_marginLeft="@dimen/home_m_lr_start"
            android:layout_marginRight="@dimen/home_m_lr_start"
            android:layout_weight="12"
            android:background="@drawable/background_start"
            android:gravity="center"
            android:text="START"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/home_start_s" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#077DAD" >
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>