<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/result_item_name_h"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/resultItem_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="Record Name A"
            android:textSize="@dimen/resultItem_name_s"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/resultItem_mail_iv"
            android:layout_width="@dimen/result_mail_w"
            android:layout_height="@dimen/result_mail_h"
            android:src="@drawable/mail_icon" />

        <ImageView
            android:layout_width="@dimen/result_add_sub_wh"
            android:layout_height="@dimen/result_add_sub_wh"
            android:layout_margin="@dimen/result_sub_m_tl"
            android:src="@drawable/sub_icon"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D2E7EF" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#DFF5FE"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/itemResult_infor_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/resultItem_infor_p"
                    android:text="infor"
                    android:textColor="#5B5B5B"
                    android:textSize="@dimen/resultItem_infor_s" />

                <ImageView
                    android:id="@+id/resultItem_add_iv"
                    android:layout_width="@dimen/result_add_sub_wh"
                    android:layout_height="@dimen/result_add_sub_wh"
                    android:layout_margin="@dimen/result_add_m"
                    android:src="@drawable/add_icon" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/resultItem_sub_iv"
            android:layout_width="@dimen/result_add_sub_wh"
            android:layout_height="@dimen/result_add_sub_wh"
            android:layout_margin="@dimen/result_sub_m_tl"
            android:src="@drawable/sub_icon" />
    </LinearLayout>

</LinearLayout>